<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:padding="14dp"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/alternate_grey"

    android:id="@+id/scrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_title"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textIsSelectable="true"
            android:background="@color/main_grey"

            tools:text="Post Title" />

        <TextView
            android:id="@+id/item_body"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textIsSelectable="true"
            android:background="@color/alternate_grey"

            tools:text="Lots and Lots of Text, saying almost anything at all. All work and no play makes Jack a Dull boy. All work and no play makes Jack a Dull boy. All work and no play makes Jack a Dull boy. All work and no play makes Jack a Dull boy." />

        <TextView
            android:id="@+id/item_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"

            tools:text="Post by user :- ?"
            android:layout_gravity="right"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingBottom="14dp"/>

    </LinearLayout>
</ScrollView>


